{
  "name": "iter-college-management-system",
  "version": "3.2.0",
  "description": "Ultimate All-in-One College Management System for ITER/SOA with AI-Powered Student Tools, Bulk Operations, Advanced Analytics, Enterprise Security, and Real-time Features",
  "main": "server/index.js",
  "scripts": {
    "setup": "node setup.js",
    "init:db": "node -e \"require('./server/database/db'); console.log('DB initialized')\"",
    "start": "node server/scripts/auto-start.js",
    "start:server": "node server/index.js",
    "dev": "concurrently \"nodemon server/index.js\" \"npm run dev:client\"",
    "dev:client": "cd client && npx serve -s . -p 3000",
    "seed": "node server/seed/seed.js",
    "seed:comprehensive": "node server/seed/comprehensive-seed.js",
    "seed:full": "npm run seed:comprehensive",
    "seed:profile": "node server/seed/seed-profile.js",
    "seed:quick": "node server/seed/seed.js",
    "migrate:profile": "node -e \"const fs = require('fs'); const path = require('path'); const sql = fs.readFileSync(path.join(__dirname, 'server/database/migrations/create-profile-tables.sql'), 'utf8'); console.log('Run this SQL in your MySQL client:\\n\\n' + sql);\"",
    "migrate:security": "node server/scripts/migrate-security.js",
    "migrate:performance": "node server/scripts/migrate-performance.js",
    "migrate:teacher": "node server/scripts/print-migration-sql.js",
    "db:run-sql": "node server/scripts/run-sql-files.js",
    "db:verify": "node server/scripts/db-verify.js",
    "setup:uploads": "node server/scripts/setup-uploads.js",
  "render:seed": "node scripts/render-seed.js",
  "render:schema": "node create-render-schema.js",
  "render:setup": "npm run render:schema && npm run render:seed",
    "test": "jest --coverage",
    "test:e2e": "playwright test",
    "build:client": "echo 'Client is vanilla HTML/CSS/JS - no build needed'",
    "build:electron": "electron-builder",
    "build:android": "node scripts/build-android.js",
    "build:android-apk": "node scripts/build-and-deploy-android.js release",
    "build:android-debug": "node scripts/build-and-deploy-android.js debug",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "backup": "node server/scripts/backup.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js"
  },
  "keywords": [
    "college-management",
    "education",
    "pwa",
    "electron",
    "nodejs",
    "mysql"
  ],
  "author": "ITER Development Team",
  "license": "MIT",
  "dependencies": {
    "@vercel/postgres": "^0.10.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "chart.js": "^4.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.3",
    "csv-stringify": "^6.4.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.7",
    "openai": "^4.20.1",
    "pdfkit": "^0.13.0",
    "pg": "^8.16.3",
    "qrcode": "^1.5.3",
    "socket.io": "^4.6.0",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0"
  },
  "build": {
    "appId": "com.iter.collegemanagement",
    "productName": "ITER College Management",
    "directories": {
      "output": "releases/desktop"
    },
    "files": [
      "electron/**/*",
      "client/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "client/assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "client/assets/icon.png",
      "category": "Education"
    }
  }
}
