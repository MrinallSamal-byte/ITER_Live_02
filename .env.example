# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=Mrinall@1123
DB_NAME=iter_college_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
STORAGE_MODE=local

# CORS Configuration
CORS_WHITELIST=http://localhost:3000,http://localhost:5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Configuration
ADMIN_EMAIL=admin@iter.edu
ADMIN_PASSWORD=Admin@123456

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000

# Backup Configuration
BACKUP_DIR=./backups

# Android App Download (optional)
# If set, the server will redirect /api/download-app to this URL and expose version info accordingly.
# Example: https://github.com/<owner>/<repo>/releases/download/v1.0.0/ITER-EduHub.apk
ANDROID_APK_URL=
# Optional: shown on the landing page when APK_URL is set
ANDROID_APK_VERSION=1.0.0
# Optional: APK file size in bytes for display (e.g., 52428800 for 50 MB)
ANDROID_APK_SIZE_BYTES=
